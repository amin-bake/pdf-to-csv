FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY app.py .

# Create upload directory
RUN mkdir -p /tmp/pdf-to-csv-uploads

# Expose port
EXPOSE 5001

# Run application
CMD ["python", "app.py"]
